<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewLabelSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Account"
            android:textStyle="bold"
            android:textColor="@color/light_grey"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="60dp"
            android:textSize="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:inputType="text"
            android:background="@drawable/edittext_backgroun"
            android:hint="Name"
            android:padding="12dp"
            android:textColorHint="@color/new_grey"
            android:textColor="@color/new_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSignUp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_backgroun"
            android:hint="Email"
            android:padding="12dp"
            android:textColorHint="@color/new_grey"
            android:textColor="@color/new_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_backgroun"
            android:hint="Password"
            android:textColorHint="@color/new_grey"
            android:padding="12dp"
            android:textColor="@color/new_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_backgroun"
            android:hint="Confirm password"
            android:padding="12dp"
            android:textColorHint="@color/new_grey"
            android:textColor="@color/new_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <TextView
            android:id="@+id/btnLogin"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:gravity="right"
            android:text="Already have an account? Sign In"
            android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_marginTop="50dp"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="@string/btn_sign_up"
                android:textColor="@color/white"
                app:cornerRadius="10dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>