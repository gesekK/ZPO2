<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context="activities.ActivityUploadActivity">


    <Button
        android:id="@+id/act_save_button"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_marginBottom="32dp"
        android:text="Save"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/act_sleep_card"
        android:layout_width="321dp"
        android:layout_height="162dp"
        android:layout_marginTop="20dp"
        android:background="@color/card_background"
        app:cardBackgroundColor="#474746"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_workout_card">

        <TextView
            android:id="@+id/act_sleep_text"
            android:layout_width="111dp"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Sleep"
            android:textColor="#9C9A9A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/act_tvSleep"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="#9C9A9A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/act_tvSleep2"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="#9C9A9A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/act_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="90dp"
            android:text="h"
            android:textColor="#9C9A9A"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/act_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="90dp"
            android:text="min"
            android:textColor="#9C9A9A"
            android:textSize="34sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/act_workout_card"
        android:layout_width="321dp"
        android:layout_height="162dp"
        android:layout_marginTop="20dp"
        android:background="@color/card_background"
        app:cardBackgroundColor="#474746"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_weight_card">

        <TextView
            android:id="@+id/act_activity_text"
            android:layout_width="111dp"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Activity"
            android:textColor="#9C9A9A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/act_tvActivity"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="#9C9A9A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/et_workout_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="90dp"
            android:text="min"
            android:textColor="#9C9A9A"
            android:textSize="34sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/act_weight_card"
        android:layout_width="321dp"
        android:layout_height="162dp"
        android:layout_marginTop="80dp"
        android:background="@color/card_background"
        app:cardBackgroundColor="#474746"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/act_weight_text"
            android:layout_width="111dp"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Weight"
            android:textColor="#9C9A9A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/act_tvWeight"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="#9C9A9A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/et_weight_kgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="90dp"
            android:text="kgs"
            android:textColor="#9C9A9A"
            android:textSize="34sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>